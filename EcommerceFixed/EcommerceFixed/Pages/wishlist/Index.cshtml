@page
@using EcommerceFixed.Models
@using Microsoft.AspNetCore.Identity;
@using EcommerceFixed.Helpers;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model EcommerceFixed.Pages.wishlist.IndexModel;
@{
    ViewData["Title"] = "Lista de Deseos";
}

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

    .btn {
        transition: all 0.3s ease;
        border-radius: 10px;
        font-weight: 600;
    }

    .btn-success {
        background: linear-gradient(45deg, #28a745, #20c997);
        border: none;
    }

    .btn-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
    }

    .price-section {
        min-height: 50px;
        display: flex;
        align-items: center;
    }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }
</style>

<!-- Mensajes de alerta -->
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <strong>¡Éxito!</strong> @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <strong>Error:</strong> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="pt-3 fw-bold">
                <i class="fas fa-heart text-danger me-2"></i>Mi Lista de Deseos
            </h1>
            <p class="text-muted mb-4">Tus productos favoritos guardados para después</p>
        </div>
    </div>

    @* if there are items in the user's wishlist, show wishlist details *@
    @if (SignInManager.IsSignedIn(User) && Model.ProductWishlist.Count > 0)
    {
        <div class="row">
            @foreach (var product in Model.ProductWishlist)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm position-relative">
                        <!-- Badge de descuento -->
                        @if (product.HasDiscount)
                        {
                            <span class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1 m-2 rounded-pill">
                                -@product.Discount%
                            </span>
                        }

                        <!-- Badge de agotado -->
                        @if (product.IsOutOfStock)
                        {
                            <span class="position-absolute top-0 end-0 bg-warning text-dark px-2 py-1 m-2 rounded-pill">
                                Agotado
                            </span>
                        }

                        <img src="@product.ImageLocation" class="card-img-top" alt="@product.Name"
                             style="height: 250px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-tag me-1"></i>@product.Category?.Name
                            </p>

                            <div class="price-section mb-3">
                                @if (product.HasDiscount)
                                {
                                    <div class="d-flex align-items-center">
                                        <span class="text-decoration-line-through text-muted me-2">
                                            @product.Price.ToString("c2")
                                        </span>
                                        <span class="fw-bold fs-5 text-success">
                                            @product.PriceAfterDiscount.ToString("c2")
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <span class="fw-bold fs-5 text-primary">@product.Price.ToString("c2")</span>
                                }
                            </div>

                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    <!-- Botón para agregar al carrito con manejo de estado -->
                                    @if (product.IsOutOfStock)
                                    {
                                        <button class="btn btn-secondary w-100" disabled>
                                            <i class="fas fa-cart-plus me-2"></i>Agotado
                                        </button>
                                    }
                                    else
                                    {
                                        <form method="post" class="d-inline">
                                            <button asp-page-handler="AddToCart"
                                                    asp-route-productId="@product.Id"
                                                    class="btn btn-success w-100">
                                                <i class="fas fa-cart-plus me-2"></i>Agregar al Carrito
                                            </button>
                                        </form>
                                    }

                                    <!-- Botón para quitar de la lista de deseos -->
                                    <form method="post" class="d-inline">
                                        <button asp-page-handler="RemoveFromWishlist"
                                                asp-route-productId="@product.Id"
                                                class="btn btn-outline-danger w-100">
                                            <i class="fas fa-trash me-2"></i>Quitar de la Lista
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/products" class="btn btn-primary btn-lg">
                    <i class="fas fa-store me-2"></i>Seguir Comprando
                </a>
            </div>
        </div>
    }
    else if (SignInManager.IsSignedIn(User) && Model.ProductWishlist.Count == 0)
    {
        <div class="text-center py-5">
            <i class="fas fa-heart fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Tu lista de deseos está vacía</h3>
            <p class="text-muted mb-4">Agrega algunos productos que te gusten para verlos aquí</p>
            <a href="/products" class="btn btn-primary btn-lg">
                <i class="fas fa-store me-2"></i>Explorar Productos
            </a>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-heart fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Inicia sesión para ver tu lista de deseos</h3>
            <p class="text-muted mb-4">Debes iniciar sesión para gestionar tu lista de deseos.</p>
            <a href="/Account/Login" class="btn btn-primary btn-lg me-2">Iniciar Sesión</a>
            <a href="Account/Register" class="btn btn-outline-primary btn-lg">Registrarse</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
}