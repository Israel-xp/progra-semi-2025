@page
@model EcommerceFixed.Pages.admin.products.IndexModel

@{
    ViewData["Title"] = "Gestión de Productos | Admin";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    /* Admin Cards */
    .admin-card {
        background: white;
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.03);
        transition: transform 0.3s ease;
    }

        .admin-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon-wrapper {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        color: white;
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #198754, #146c43);
        color: white;
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, #ffc107, #ffca2c);
        color: #000;
    }

    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545, #b02a37);
        color: white;
    }

    /* Table Styles */
    .table-custom thead th {
        border-bottom: none;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6c757d;
        background-color: #fff;
        padding: 1rem;
    }

    .table-custom tbody td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .product-thumb {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #eee;
    }

    /* Botones de Acción */
    .btn-icon {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        border: 1px solid transparent;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }

    .btn-edit {
        color: #fd7e14;
        background: rgba(253,126,20,0.1);
    }

        .btn-edit:hover {
            background: #fd7e14;
            color: white;
        }

    .btn-delete {
        color: #dc3545;
        background: rgba(220,53,69,0.1);
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
        }

    .btn-view {
        color: #0d6efd;
        background: rgba(13,110,253,0.1);
    }

        .btn-view:hover {
            background: #0d6efd;
            color: white;
        }
</style>

@if (TempData["success"] != null)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1050; margin-top: 80px;">
        <div class="toast show bg-success text-white border-0 shadow-lg">
            <div class="d-flex"><div class="toast-body"><i class="fas fa-check-circle me-2"></i>@TempData["success"]</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>
        </div>
    </div>
}

<div class="container-fluid px-4 py-5">

    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h6 class="text-uppercase text-muted small fw-bold mb-1">Inventario</h6>
            <h2 class="fw-bold text-dark mb-0">Gestión de Productos</h2>
        </div>
        <a asp-page="Create" class="btn btn-dark rounded-pill px-4 py-2 shadow-sm d-flex align-items-center">
            <i class="fas fa-plus me-2"></i>Nuevo Producto
        </a>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="admin-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Total</p>
                        <h3 class="mb-0 fw-bold text-dark">@Model.Products.Count</h3>
                    </div>
                    <div class="stat-icon-wrapper bg-gradient-primary"><i class="fas fa-box"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="admin-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">En Stock</p>
                        <h3 class="mb-0 fw-bold text-success">@Model.Products.Count(p => !p.IsOutOfStock)</h3>
                    </div>
                    <div class="stat-icon-wrapper bg-gradient-success"><i class="fas fa-check"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="admin-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Ofertas</p>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Products.Count(p => p.HasDiscount)</h3>
                    </div>
                    <div class="stat-icon-wrapper bg-gradient-warning"><i class="fas fa-percent"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="admin-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Agotados</p>
                        <h3 class="mb-0 fw-bold text-danger">@Model.Products.Count(p => p.IsOutOfStock)</h3>
                    </div>
                    <div class="stat-icon-wrapper bg-gradient-danger"><i class="fas fa-times"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 py-3 px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-dark">Listado de Inventario</h5>
            <input type="text" id="productSearch" class="form-control bg-light border-0" style="width: 250px;" placeholder="Buscar producto...">
        </div>

        <div class="card-body p-0">
            @if (Model.Products.Any())
            {
                <div class="table-responsive">
                    <table class="table table-custom mb-0" id="productsTable">
                        <thead>
                            <tr>
                                <th class="ps-4">Producto</th>
                                <th>Categoría</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Estado</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center gap-3">
                                            <img src="@item.ImageLocation" class="product-thumb" alt="img" onerror="this.src='https://via.placeholder.com/50'">
                                            <div>
                                                <h6 class="mb-0 fw-bold text-dark product-name">@item.Name</h6>
                                                <small class="text-muted">SKU: @item.SKU</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@item.Category?.Name</span></td>
                                    <td>
                                        @if (item.HasDiscount)
                                        {
                                            <span class="text-danger fw-bold">@item.PriceAfterDiscount.ToString("c2")</span>
                                            <small class="text-muted text-decoration-line-through">@item.Price.ToString("c0")</small>
                                        }
                                        else
                                        {
                                            <span class="fw-bold">@item.Price.ToString("c2")</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="fw-bold">@item.Quantity</span>
                                            @if (item.Quantity < 5 && item.Quantity > 0)
                                            {
                                                <i class="fas fa-exclamation-circle text-warning" title="Bajo Stock"></i>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.IsOutOfStock)
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger">Agotado</span>
                                        }
                                        else if (item.IsFeatured)
                                        {

                                            <span class="badge bg-warning bg-opacity-10 text-warning">Destacado</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-success bg-opacity-10 text-success">Activo</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn-icon btn-view" title="Ver"><i class="fas fa-eye small"></i></a>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn-icon btn-edit" title="Editar"><i class="fas fa-pen small"></i></a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn-icon btn-delete" title="Borrar"><i class="fas fa-trash small"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-light mb-3"></i>
                    <h5 class="text-muted">No hay productos</h5>
                    <a asp-page="Create" class="btn btn-primary rounded-pill mt-2">Crear Producto</a>
                </div>
            }
        </div>

        <div class="card-footer bg-white border-0 py-3 px-4">
            <small class="text-muted">Total: @Model.Products.Count productos</small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-close toast
        setTimeout(() => document.querySelectorAll('.toast').forEach(el => new bootstrap.Toast(el).hide()), 3000);

        // Buscador JS
        document.getElementById('productSearch')?.addEventListener('keyup', function(e) {
            const text = e.target.value.toLowerCase();
            document.querySelectorAll('#productsTable tbody tr').forEach(row => {
                const name = row.querySelector('.product-name').textContent.toLowerCase();
                row.style.display = name.includes(text) ? '' : 'none';
            });
        });
    </script>
}