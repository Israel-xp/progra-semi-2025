@page
@model EcommerceFixed.Pages.IndexModel
@{
    ViewData["Title"] = "Urban Trends | Define tu Estilo";
}

<style>
    /* Hero Section Imponente */
    .hero-banner {
        height: 85vh;
        background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1483985988355-763728e1935b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        position: relative;
        margin-top: -50px; /* Para que pegue con el navbar transparente */
    }

    .hero-content h1 {
        font-family: 'Playfair Display', serif;
        font-size: 4.5rem;
        font-weight: 700;
        letter-spacing: -1px;
        text-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }

    /* Cards de Producto Premium */
    .urban-card {
        border: none;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
    }

        .urban-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .card-img-wrapper {
        position: relative;
        overflow: hidden;
        height: 380px; /* Altura fija para uniformidad */
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .urban-card:hover .card-img-top {
        transform: scale(1.08);
    }

    /* Botones Flotantes sobre la imagen */
    .card-actions-overlay {
        position: absolute;
        bottom: 15px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 10px;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
    }

    .urban-card:hover .card-actions-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    .btn-action-float {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: white;
        color: #121212;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        transition: all 0.2s;
    }

        .btn-action-float:hover {
            background: #D4AF37; /* Dorado */
            color: white;
            transform: scale(1.1);
        }

    /* Badges elegantes */
    .badge-urban {
        position: absolute;
        top: 15px;
        left: 15px;
        padding: 5px 12px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 2;
    }

    .badge-sale {
        background: #e74c3c;
        color: white;
    }

    .badge-new {
        background: #121212;
        color: white;
    }

    /* Info del Producto */
    .card-body {
        padding: 1.2rem;
        background: white;
        position: relative;
        z-index: 5;
    }

    .product-category {
        font-size: 0.75rem;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: block;
        margin-bottom: 4px;
    }

    .product-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .price-wrapper {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
    }

    /* Estrellas Corregidas */
    .rating-wrap {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 0.8rem;
        color: #ddd; /* Color base gris */
    }

        .rating-wrap .active {
            color: #f1c40f;
        }
    /* Dorado */

    /* Sección Categorías Rápidas (Círculos) */
    .cat-circle {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        overflow: hidden;
        position: relative;
        border: 3px solid transparent;
        transition: all 0.3s;
        cursor: pointer;
    }

        .cat-circle:hover {
            border-color: #D4AF37;
            transform: scale(1.05);
        }

        .cat-circle img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .cat-label {
        text-align: center;
        margin-top: 10px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    @@media (max-width: 768px) {
        .hero-banner

    {
        height: 60vh;
    }

    .hero-content h1 {
        font-size: 2.5rem;
    }

    .card-img-wrapper {
        height: 280px;
    }

    .card-actions-overlay {
        opacity: 1;
        transform: translateY(0);
    }
    /* En móvil siempre visibles */
    }
</style>

@if (TempData["success"] != null)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 80px;">
        <div class="toast show bg-white shadow border-start border-success border-5">
            <div class="toast-body d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success fs-4 me-2"></i>
                <div>@TempData["success"]</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

<section class="hero-banner">
    <div class="container text-center text-white hero-content">
        <span class="d-block mb-3 text-uppercase tracking-widest" style="letter-spacing: 3px; font-size: 0.9rem;">Nueva Colección 2024</span>
        <h1 class="mb-4">Redefine tu Estilo</h1>
        <p class="lead mb-5 opacity-75 mx-auto" style="max-width: 600px;">
            Moda urbana premium diseñada para quienes no siguen tendencias, sino que las crean.
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/products" class="btn btn-light rounded-pill px-5 py-3 fw-bold shadow">
                Comprar Ahora
            </a>
            <a href="/products?OnSale=true" class="btn btn-outline-light rounded-pill px-5 py-3 fw-bold">
                Ver Ofertas
            </a>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container">
        <div class="row justify-content-center g-4 text-center">
            <div class="col-6 col-md-3">
                <a href="/products?Gender=Hombre" class="text-decoration-none text-dark">
                    <div class="cat-circle mx-auto shadow">
                        <img src="https://images.unsplash.com/photo-1617137984095-74e4e5e3613f?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Hombre">
                    </div>
                    <div class="cat-label">Hombres (@Model.HombreCount)</div>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/products?Gender=Mujer" class="text-decoration-none text-dark">
                    <div class="cat-circle mx-auto shadow">
                        <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Mujer">
                    </div>
                    <div class="cat-label">Mujeres (@Model.MujerCount)</div>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/products?Gender=Unisex" class="text-decoration-none text-dark">
                    <div class="cat-circle mx-auto shadow">
                        <img src="https://images.unsplash.com/photo-1523381294911-8d3cead13475?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Unisex">
                    </div>
                    <div class="cat-label">Unisex (@Model.UnisexCount)</div>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/products?OnSale=true" class="text-decoration-none text-danger">
                    <div class="cat-circle mx-auto shadow border-danger">
                        <img src="https://images.unsplash.com/photo-1607083206869-4c7672e72a8a?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Ofertas">
                    </div>
                    <div class="cat-label">Ofertas Flash</div>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                <h6 class="text-uppercase text-muted small mb-2 tracking-widest">Selección Exclusiva</h6>
                <h2 class="font-playfair fw-bold display-6">Trending Now</h2>
            </div>
            <a href="/products" class="btn btn-link text-dark text-decoration-none fw-bold">Ver Todo <i class="bi bi-arrow-right"></i></a>
        </div>

        @if (Model.Productos.Any())
        {
            <div class="row g-4">
                @foreach (var p in Model.Productos)
                {
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="urban-card h-100 position-relative">

                            @if (p.HasDiscount)
                            {
                                <span class="badge-urban badge-sale">-@p.Discount%</span>
                            }
                            else if (p.IsFeatured)
                            {
                                <span class="badge-urban badge-new">New</span>
                            }

                            <div class="card-img-wrapper">
                                <a asp-page="/products/Details" asp-route-id="@p.Id">
                                    <img src="@p.ImageLocation" class="card-img-top" alt="@p.Name"
                                         onerror="this.src='https://via.placeholder.com/400x500?text=No+Image'">
                                </a>

                                <div class="card-actions-overlay">
                                    @if (p.Quantity > 0)
                                    {
                                        <form method="post" asp-page-handler="AgregarAlCarrito" asp-route-productoId="@p.Id">
                                            <button type="submit" class="btn-action-float" title="Agregar al Carrito">
                                                <i class="bi bi-bag-plus"></i>
                                            </button>
                                        </form>
                                    }

                                    <a asp-page="/products/Details" asp-route-id="@p.Id" class="btn-action-float" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <form method="post" asp-page-handler="AgregarAFavoritos" asp-route-productoId="@p.Id">
                                        <button type="submit" class="btn-action-float" title="Favoritos">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <div class="card-body text-center">
                                <span class="product-category">@p.Category?.Name</span>
                                <h3 class="product-title">
                                    <a asp-page="/products/Details" asp-route-id="@p.Id" class="text-dark text-decoration-none">
                                        @p.Name
                                    </a>
                                </h3>

                                <div class="d-flex justify-content-center mb-2">
                                    <div class="rating-wrap">
                                        @{
                                            double rating = p.AverageRating; // 0 a 5
                                                                             // Llenamos 5 estrellas
                                            for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= rating)
                                                {
                                                    <i class="bi bi-star-fill active"></i>
                                                } // Llena
                                                else if (i - 0.5 <= rating)
                                                {

                                                    <i class="bi bi-star-half active"></i>
                                                } // Media
                                                else
                                                {

                                                    <i class="bi bi-star"></i>
                                                } // Vacía
                                            }
                                        }
                                        <span class="text-muted ms-1" style="font-size: 0.75rem;">(@(p.Reviews?.Count ?? 0))</span>
                                    </div>
                                </div>

                                <div class="price-wrapper">
                                    @if (p.HasDiscount)
                                    {
                                        <span class="text-muted text-decoration-line-through me-2 small">@p.Price.ToString("C")</span>
                                        <span class="text-danger fs-5">@p.PriceAfterDiscount.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="text-dark fs-5">@p.Price.ToString("C")</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-box-seam display-1 text-muted mb-3"></i>
                <h3>¡Ups! No hay productos destacados aún.</h3>
                <p class="text-muted">Estamos renovando nuestro inventario.</p>
            </div>
        }
    </div>
</section>

<section class="py-5 border-top bg-white">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <i class="bi bi-truck display-5 text-warning mb-3"></i>
                <h5>Envío Gratis</h5>
                <p class="text-muted small">En pedidos superiores a $99</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-shield-check display-5 text-warning mb-3"></i>
                <h5>Pago Seguro</h5>
                <p class="text-muted small">Transacciones 100% protegidas</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-arrow-counterclockwise display-5 text-warning mb-3"></i>
                <h5>Devoluciones Fáciles</h5>
                <p class="text-muted small">30 días para cambios</p>
            </div>
        </div>
    </div>
</section>